{
  "name": "NicordJS",
  "version": "1.0.0",
  "description": "Framework for creating modern discord bots",
  "repository": "https://github.com/LIMPIX31/NicordJS.git",
  "author": "LIMPIX31",
  "license": "MIT",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "start": "ts-node examples/index.ts",
    "test": "jest --config jestconfig.json",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "keywords": [
    "Discord",
    "Bot",
    "Framework",
    "Nicord"
  ],
  "bugs": {
    "url": "https://github.com/LIMPIX31/NicordJS/issues"
  },
  "homepage": "https://github.com/LIMPIX31/NicordJS#readme",
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "concurrently": "^7.0.0",
    "jest": "^27.4.7",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.4.0",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.5.5"
  }
}
